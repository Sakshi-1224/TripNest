<%layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-8 offset-2">
        <br>
        <h1>Create New List</h1>
        <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3 ">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Title" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
                <div class="mb-3 ">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]"  class="form-control" required></textarea required>
                    <div class="invalid-feedback">enter short description</div>
                </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input type="file" name="listing[image]" placeholder="enter image URL/Link" class="form-control">
            required
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                
                <label for="price" class="form-label">Price</label><br>
                <input  name="listing[price]" placeholder="Price" class="form-control" required>
                <div class="invalid-feedback">enter valid price</div>
                
            </div>
            <div class="mb-3 col-md-8">
                
                <label for="country" class="form-label">Country</label><br>
                <input type="text" name="listing[country]" placeholder="Country" class="form-control" required>
                <div class="invalid-feedback">enter valid country</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label><br>
            <input type="text" name="listing[location]" placeholder="Location" class="form-control" required>
            <div class="invalid-feedback">enter valid location</div>
        </div><br>
        <button class="btn  btn-dark add-btn">ADD</button>
    </div>
    </div>
    </form>